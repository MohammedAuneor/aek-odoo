<openerp>
    <data>

        <template id="website_custom_file_upload_assets_frontend" name="website_custom_file_upload assets" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_fileupload/static/src/js/upload.js"></script>
            </xpath>
        </template>
        
        <record id="website_custom_file_upload_tree" model="ir.ui.view">
            <field name="name">Website Custom File Upload Tree</field>
            <field name="model">website.custom.file.upload</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="website_custom_file_upload_form" model="ir.ui.view">
            <field name="name">Website Custom File Upload Form</field>
            <field name="model">website.custom.file.upload</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Data">
                            <field name="name"/>
                            <field name="file" filename="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="website_custom_file_upload_action" model="ir.actions.act_window">
            <field name="name">Website Custom File Upload</field>
            <field name="res_model">website.custom.file.upload</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="website_custom_file_upload_menu" action="website_custom_file_upload_action" parent="website.menu_website_global_configuration" sequence="10" />

    </data>
</openerp>
